  <insert id="PostInsertOfBoard" parameterType="com.example.sproject.model.board.Post">
	INSERT INTO post (p_num, m_id, p_name, p_content) VALUES (
	(SELECT NVL(MAX(p_num)+1, 1) FROM post), #{m_id}, #{p_name}, #{p_content})
   </insert>

